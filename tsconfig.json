{
    "compilerOptions": {
        "downlevelIteration": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": true
    },
    "include": [
        "src/**/*",
        "tests/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}