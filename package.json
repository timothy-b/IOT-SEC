{
    "name": "iotsec",
    "version": "1.0.0",
    "description": "An IOT security system using a Particle Photon and a Raspberry Pi",
    "main": "dist/program.js",
    "dependencies": {
        "arpscan": "^0.6.0",
        "async": "^2.6.0",
        "bunyan": "^1.8.12",
        "emailjs": "^2.0.0",
        "npm": "^7.3.0",
        "ts-leaky-bucket": "^1.1.1",
        "uuid-random": "^1.3.2"
    },
    "devDependencies": {
        "@types/async": "^3.0.2",
        "@types/bunyan": "^1.8.6",
