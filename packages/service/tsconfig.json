{
    "compilerOptions": {
        "downlevelIteration": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "preserveConstEnums": true,
        "removeComments": true,
        "strict": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
    ],
}