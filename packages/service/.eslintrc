{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"quotes": [
			"error",
			"single",
			{
				"avoidEscape": true
			}
		],
		"jsx-quotes": [
			"error",
			"prefer-double"
		],
		"comma-dangle": [
			"warn",
			"always-multiline"
		],
		"ordered-imports": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"arrow-parens": [
			"off"
		],
		"object-literal-sort-keys": "off",
		"curly": [
			"error",
			"all"
		]
	}
}